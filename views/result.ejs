<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Risultati Quiz</title>
</head>
<body>
    <div class="container">
        <img class="logo" src="/logo/aitho_logo.png" alt="Logo Aitho">
        <h1>Risultati del Quiz</h1>
        <div class="result">
            <p>Ciao <%= name %>, hai ottenuto <%= score %> <%= score === 1 ? 'punto' : 'punti' %>!</p>
        </div>

        <div class="leaderboard">
            <h2>Leaderboard</h2>
            <ul id="leaderboard-list">
                <% if (leaderboard && leaderboard.length > 0) { %>
                    <% leaderboard.sort((a, b) => b.score - a.score); %>
                    <% leaderboard.forEach(entry => { %>
                        <li><%= entry.name %> = <%= entry.score %> <%= entry.score === 1 ? 'punto' : 'punti' %></li>
                    <% }) %>
                <% } else { %>
                    <li>Nessun punteggio ancora!</li>
                <% } %>
            </ul>
        </div>

        <form action="/" method="get">
            <button type="submit" class="btn">Torna alla Home</button>
        </form>
    </div>

    <script>
        function updateLeaderboard() {
            fetch('/get-leaderboard')
                .then(response => response.json())
                .then(data => {
                    const leaderboardList = document.getElementById('leaderboard-list');
                    leaderboardList.innerHTML = ''; // Pulisci la lista esistente

                    if (data.leaderboard && data.leaderboard.length > 0) {
                        data.leaderboard.sort((a, b) => b.score - a.score);
                        data.leaderboard.forEach(entry => {
                            const li = document.createElement('li');
                            li.textContent = `${entry.name} = ${entry.score} ${entry.score === 1 ? 'punto' : 'punti'}`;
                            leaderboardList.appendChild(li);
                        });
                    } else {
                        const li = document.createElement('li');
                        li.textContent = 'Nessun punteggio ancora!';
                        leaderboardList.appendChild(li);
                    }
                })
                .catch(error => console.error('Error fetching leaderboard:', error));
        }

        // Aggiorna la leaderboard ogni secondo
        setInterval(updateLeaderboard, 1000);
    </script>
</body>
</html>
